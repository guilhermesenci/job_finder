<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre o seu emprego dos sonhos</h1>
    <p id="main-subtitle" class="text-center">Somos o melhor site para vagas de tecnologia para home office</p>
    <form id="search-form" class="form-inline" action="/" method="GET">
        <div class="form-group col-md-10">
            <input type="text" class="form-control" id="job" name="job" placeholder="Digita a vaga que estÃ¡ buscado">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Procurar</button>
        </div>
    </form>
</div>
<main>
    <div id="jobs-container" class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {{#if search}}
                  <h2 id="job-list-title">Buscando vagas que contenham: {{search}}</h2>
                {{else}}
                  <h2 id="job-list-title">Vagas em destaque</h2><p></p>
                {{/if}}
                <ul id="job-list" class="list-group">
                    {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
                            <img src="/img/company.jfif" alt="Company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>R${{dataValues.salary}}</p>
                            <span class="new-job-label">Nova</span>
                            <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">Ver vaga</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</main>